{
    "version": 2,
    "builds": [
        {
            "src": "package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/*.ts",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/$1",
            "check": true
        },
        {
            "src": "/assets/(.*)",
            "dest": "/assets/$1",
            "check": true
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}